{
  "version": 2,
  "name": "counselflow-ultimate",
  "builds": [
    {
      "src": "apps/frontend/dist/**",
      "use": "@vercel/static"
    },
    {
      "src": "apps/backend/dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/backend/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/frontend/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3001"
  },
  "functions": {
    "apps/backend/dist/main.js": {
      "maxDuration": 30
    }
  }
}
